@model IEnumerable<Kosarka_ITivity_Dejan_Savanovic.Models.IgracViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<button type="button" class="btn btn-primary" id="btnKreirajIgraca">
    Create New
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IgracID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumRodjenja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drzava)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PozicijaID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlikaID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IgracID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumRodjenja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drzava)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PozicijaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlikaID)
            </td>
            <td>
                <a href="#Edit" data-igracID="@item.IgracID" class="btnEdit">Azuriraj</a>
                @*Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
    }

</table>

<!-- Modal -->
<div class="modal fade" id="modalIgracCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kreiraj igraca</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalTijeloCreate">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                <button type="button" class="btn btn-primary" id="btnSacuvaj">Sacuvaj</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalIgracEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Azuriraj igraca</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalTijeloEdit">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                <button type="button" class="btn btn-primary" id="btnAzuriraj">Azuriraj</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Igrac/igracKontroler.js"></script>
}

