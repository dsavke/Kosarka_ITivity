@model Kosarka_ITivity_Dejan_Savanovic.Models.IgracViewModel

<div class="col">
    <div class="col-12 pt-2 pl-5 pr-5 pb-3">
        <div class="col-11 bg-transparent ml-3 mr-3 mt-0" style="height:300px">
            @Html.Hidden("txtSlikaID", Model.SlikaID)
            @Html.Hidden("txtIgracID", Model.IgracID)
            <img src='@Url.Action("GetImage", "Pocetna", new { id = Model.SlikaID })' id="txtSlika" height="200" width="200" style="display:block;margin:auto; opacity:0.5;
                                " class="center-element" />
            <label style="border: 1px solid #ccc;
                                display: inline-block;
                                padding: 6px 12px;
                                cursor: pointer;" class="center-element">
                <input onchange="changeImage(this, txtSlika);" type="file" id="imgTim" style="display: none;" />
                Upload image
            </label>
        </div>

        <div class="row mt-4">
            <label class="col-3">Ime</label>
            <input class="form-control col-9" type="text" id="txtIme" value="@Model.Ime" />
        </div>
        <div class="row mt-4">
            <label class="col-3">Prezime</label>
            <input class="form-control col-9" type="text" id="txtPrezime" value="@Model.Prezime" />
        </div>
        <div class="row mt-4">
            <label class="col-5">Datum rodjenja</label>
            @Html.EditorFor(model => model.DatumRodjenja, new { htmlAttributes = new { @class = "form-control col-7", @id = "txtDatumRodjenja" } })
        </div>
        <div class="row mt-4">
            <label class="col-3">Drzava</label>
            <input class="form-control col-9" type="text" id="txtDrzava" value="@Model.Drzava" />
        </div>
        <div class="row mt-4">
            <label class="col-3">Broj dresa</label>
            <input class="form-control col-9" type="text" id="txtBrojDresa" value="@Model.BrojDresa" />
        </div>
        <div class="row mt-4">
            <label class="col-3">Grad</label>
            @Html.DropDownList("GradID", ViewBag.Gradovi as List<SelectListItem>
                , new { @class = "form-control col-9", @id = "txtGradID" })
        </div>

        <div class="row mt-4">
            <label class="col-3">Tim</label>
            @Html.DropDownList("TimID", ViewBag.Timovi as List<SelectListItem>
                , new { @class = "form-control col-9", @id = "txtTimID" })
        </div>

        <div class="row mt-4">
            <label class="col-3">Pozicija</label>
            @Html.DropDownList("PozicijaID", ViewBag.Pozicije as List<SelectListItem>
                , new { @class = "form-control col-9", @id = "txtPozicijaID" })
        </div>

    </div>
</div>